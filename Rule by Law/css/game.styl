vendor(prop, args) {
    -webkit-{prop}: args;
    -moz-{prop}: args;
    -o-{prop}: args;
    -ms-{prop}: args;
    {prop}: args;
}

animation() {
    vendor: animation arguments;
}

animation-fill-mode() {
    vendor: animation-fill-mode arguments;
}

transform() {
    vendor: transform arguments;
}

html {
    height: 100%;
    width: 100%;
}

body {
    margin: 0;
    background: rgb(150, 200, 255);
    font-family: '微软雅黑';
    display: flex;
    justify-content: space-between;
    flex-direction: column;
    height: 100%;
    width: 100%;
    min-width: 720px;
    min-height: 480px;
    > header {
        text-align: center;
        flex: 2 100px;
        display: flex;
        justify-content: space-between;
        flex-direction: column;
        overflow: hidden;
        position: relative;
        h1 {
            color: rgb(0, 0, 0);
            margin: .5em 0 0 0;
            flex: 1;
        }
        h2 {
            font-size: 4em;
            color: rgb(100, 150, 255);
            margin: 0;
            flex: 2;
            div {
                &:nth-of-type(1) p {
                    font-size: 2rem;
                    margin: 0;
                    span {
                        vertical-align: middle;
                    }
                }
                &:nth-of-type(2) {
                    color: rgb(255, 100, 100);
                    cursor: pointer;
                    position: relative;
                    &:hover {
                        &:after {
                            position: absolute;
                            top: 0;
                            left: 0;
                            content: '开始';
                            width: 100%;
                            animation: start .5s infinite;
                        }
                    }
                }
            }
        }
        nav {
            position: absolute;
            right: .25em;
            top: 0;
            span {
                display: inline-block;
                margin: .25em;
                cursor: pointer;
                &:nth-of-type(1) {
                    cursor: inherit;
                }
            }
        }
    }
    > section {
        display: flex;
        item-align: center;
        justify-content: space-around;
        flex: 3;
        figure {
            padding: 15px 0;
            box-shadow: 0 0 2px 2px rgba(255, 255, 255, .3);
            border-radius: 8px;
            text-align: center;
            font-size: 1.8em;
            flex: 1;
            display: flex;
            flex-direction: column;
            justify-content: center;
            position: relative;
            figcaption {
                margin: 0 0 1em 0;
            }
            span {
                &.num {
                    position: absolute;
                    left: 0;
                    font-size: .9em;
                    text-align: center;
                    width: 100%;
                    text-shadow: 0 0 3px rgb(255, 255, 255);
                    animation-fill-mode: forwards;
                    opacity: 0;
                }
                &.plus {
                    animation: up .5s ease-out;
                }
                &.minus {
                    animation: down .5s ease-out;
                }
                &:nth-of-type(2) {
                    top: -1.2em;
                    color: rgb(50, 155, 50);
                }
                &:nth-of-type(3) {
                    bottom: -1.2em;
                    color: rgb(155, 50, 50);
                }
            }
            &:nth-of-type(1) {
                background: rgb(255, 255, 255);
            }
            &:nth-of-type(2) {
                background: rgb(255, 255, 155);
            }
            &:nth-of-type(3) {
                background: rgb(255, 100, 100);
            }
            &:nth-of-type(4) {
                background: rgb(155, 155, 155);
            }
        }
    }
    > footer {
        flex: 1;
        display: flex;
        flex-direction: column;
        justify-content: flex-end;
        p {
            text-align: center;
        }
        span {
            display: block;
            text-align: right;
            margin: 0 .5em .5em 0;
        }
    }
}

form input {
    width: 100%;
    margin: 0;
}

.hidden {
    display: none;
}

@keyframes start {
    0%, 75% {
        transform: scale(1);
    }
    100% {
        transform: scale(2);
        opacity: 0;
    }
}

@keyframes up {
    10%, 65% {
        opacity: 1;
    }
    100% {
        top: -1.8em;
        opacity: 0;
    }
}

@keyframes down {
    10%, 65% {
        opacity: 1;
    }
    100% {
        bottom: -1.8em;
        opacity: 0;
    }
}